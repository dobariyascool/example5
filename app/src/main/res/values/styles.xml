<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ImageView">
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">@dimen/control_SpecingTiny</item>
    </style>
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MyActionBarMenuText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditTextToogleButton">
        <item name="android:layout_height">@dimen/tbutton_Height</item>
        <item name="android:layout_width">@dimen/tbutton_Width</item>
        <item name="android:layout_marginTop">@dimen/tbutton_MarginTop</item>
        <item name="android:text">""</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>

    <style name="EditText" parent="Material.Widget.EditText.Light">
        <item name="cet_spanHeight">32dp</item>
        <item name="cet_spanMaxWidth">150dp</item>
        <item name="cet_spanPaddingLeft">8dp</item>
        <item name="cet_spanPaddingRight">12dp</item>
        <item name="cet_spanTextSize">14sp</item>
        <item name="cet_spanTextColor">@color/primary_dark</item>
        <item name="cet_spanBackgroundColor">#FFE0E0E0</item>
        <item name="cet_spanSpacing">4dp</item>
        <item name="et_supportMode">helper</item>
        <item name="et_supportTextErrorColor">@color/error_text</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="et_dividerErrorColor">@color/error_text</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="et_labelTextColor">@color/primary_dark</item>
        <item name="et_labelEnable">true</item>
        <item name="et_labelPadding">0dp</item>
        <item name="et_labelTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="AppCompactAutoCompleteTextView">android.support.v7.widget.AppCompatAutoCompleteTextView</style>


    <style name="Spinner" parent="Material.Widget.Spinner.Light">
        <item name="cet_spanHeight">32dp</item>
        <item name="cet_spanMaxWidth">150dp</item>
        <item name="cet_spanPaddingLeft">8dp</item>
        <item name="cet_spanPaddingRight">12dp</item>
        <item name="cet_spanTextSize">14sp</item>
        <item name="cet_spanTextColor">@color/primary_dark</item>
        <item name="cet_spanBackgroundColor">#FFE0E0E0</item>
        <item name="cet_spanSpacing">4dp</item>
        <item name="et_supportMode">helper</item>
        <item name="et_supportTextErrorColor">@color/error_text</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="et_dividerErrorColor">@color/error_text</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="et_labelTextColor">@color/primary_dark</item>
        <item name="rd_style">@style/Material.Drawable.Ripple.Wave.Light</item>
        <item name="rd_enable">true</item>
        <item name="rd_delayClick">none</item>
        <item name="spn_popupItemAnimation">@anim/abc_fade_in</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
    </style>

    <style name="RaiseColorButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@drawable/bg_bt_raise_color</item>
        <item name="android:textColor">@color/text_icons</item>
        <item name="rd_padding">@dimen/button_Padding</item>
        <item name="android:layout_height">@dimen/button_TouchableHeight</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="rd_rippleColor">@color/rippleColor</item>
        <item name="rd_rippleType">touch</item>
    </style>

    <style name="RaiseButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@drawable/bg_bt_raise</item>
        <item name="rd_padding">@dimen/button_Padding</item>
        <item name="android:layout_height">@dimen/button_Height</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="rd_rippleColor">@color/rippleColor</item>
        <item name="rd_rippleType">touch</item>
    </style>

    <style name="ListView">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:listSelector">@color/brown</item>
        <item name="android:background">@color/transparent_orange</item>
    </style>

    <style name="CompoundButton">
        <item name="android:textColor">@color/accent_dark</item>
        <item name="rd_rippleColor">@color/primary_light</item>
        <item name="rd_rippleType">touch</item>
        <item name="rd_enable">true</item>
        <item name="rd_inInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_outInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="rd_padding">0dp</item>
        <item name="rd_delayClick">none</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="PrimaryTextView">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryTextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/control_TextSmall</item>
    </style>

    <style name="MaterialTabLayout">android.support.design.widget.TabLayout</style>
    <style name="AppCompactCardView">android.support.v7.cardview</style>

    <style name="FloatingActionButton">com.github.clans.fab.FloatingActionButton</style>
    <style name="FloatingActionMenu">com.github.clans.fab.FloatingActionMenu</style>

    <style name="TabLayout" parent="MaterialTabLayout">
        <item name="tabIndicatorColor">@color/accent_dark</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Button" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@color/accent_dark</item>
        <item name="rd_padding">@dimen/button_Padding</item>
        <item name="android:layout_height">@dimen/button_Height</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:radius">2dp</item>
        <item name="rd_rippleColor">@color/accent</item>
        <item name="rd_rippleType">touch</item>
    </style>

    <style name="CardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="cardBackgroundColor">@color/transparent_orange</item>
    </style>

    <!--fab:menu_backgroundColor="@color/transparentBackground"-->
    <!--fab:menu_colorNormal="@color/accent_dark"-->
    <!--fab:menu_colorPressed="@color/accent"-->
    <!--fab:menu_colorRipple="@color/accent_light"-->
    <!--fab:menu_labels_ellipsize="end"-->
    <!--fab:menu_labels_hideAnimation="@anim/jump_to_down"-->
    <!--fab:menu_labels_position="left"-->
    <!--fab:menu_labels_showAnimation="@anim/jump_from_down"-->
    <!--fab:menu_labels_singleLine="true"-->

    <style name="FloatingMenu" parent="FloatingActionMenu">
        <item name="menu_backgroundColor">@color/transparentBackground</item>
        <item name="menu_colorNormal">@color/accent_dark</item>
        <item name="menu_colorPressed">@color/accent</item>
        <item name="menu_colorRipple">@color/accent_light</item>
        <item name="menu_labels_ellipsize">end</item>
        <item name="menu_labels_hideAnimation">@anim/jump_to_down</item>
        <item name="menu_labels_position">left</item>
        <item name="menu_labels_showAnimation">@anim/jump_from_down</item>
        <item name="menu_labels_singleLine">true</item>
    </style>

    <style name="FloatingButtonWithTextStyle" parent="FloatingActionButton">
        <!--<item name="android:background">@drawable/rounded_button</item>-->
        <item name="fab_colorNormal">@color/accent_dark</item>
        <item name="rd_rippleColor">@color/accent_light</item>
        <item name="rd_cornerRadius">@dimen/fbutton_cornerRadius</item>
        <!--<item name="android:textColor">@drawable/link_label_selector</item>-->
        <item name="android:height">@dimen/fbuttonMini_Height</item>
        <item name="android:minHeight">@dimen/fbuttonMini_Height</item>
        <item name="android:layout_marginEnd">@dimen/fbutton_MarginBottomEnd</item>
        <item name="android:layout_marginBottom">@dimen/fbutton_MarginBottomEndTablet</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorPressed">@color/accent</item>
        <item name="fab_colorRipple">@color/accent</item>
    </style>

    <style name="FloatingButton" parent="FloatingActionButton">
        <item name="fab_colorNormal">@color/accent_dark</item>
        <item name="rd_rippleColor">@color/accent_light</item>
        <item name="fab_size">normal</item>
        <item name="fab_colorPressed">@color/accent</item>
        <item name="android:src">@mipmap/plus</item>
    </style>

    <style name="TextView">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ErrorTextView">
        <item name="android:padding">@dimen/control_SpecingSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MaterialButton">com.rey.material.widget.Button</style>
    <style name="NumberButton" parent="MaterialButton">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="rd_enable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="rd_rippleType">wave</item>
        <item name="rd_rippleColor">#90A4AE</item>
        <item name="rd_cornerRadius">2dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
