<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvOrder"
    style="@style/CardViewTransparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/control_SpecingSmall"
        android:paddingEnd="@dimen/control_SpecingSmall"
        android:paddingStart="@dimen/control_SpecingSmall"
        android:paddingTop="@dimen/control_SpecingTiny">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="@dimen/control_SpecingTiny"
            android:layout_marginTop="@dimen/control_SpecingTiny"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/txtTableName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/control_TextMedium"
                    android:textStyle="bold" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txtOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/control_SpecingTiny"
                    android:paddingStart="@dimen/control_SpecingTiny"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/control_TextMedium"
                    android:visibility="gone" />

            </LinearLayout>


            <ImageView
                android:id="@+id/ivOrderIcon"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/cooking"
                android:tint="@color/accent_red"
                android:gravity="end|center"
                android:paddingEnd="@dimen/control_SpecingTiny"
                tools:ignore="ContentDescription" />
            <!--android:layout_weight="0.5"-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.rey.material.widget.TextView
                android:id="@+id/txtOrderType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:maxLines="1"
                android:textColor="@color/accent_red"
                android:textSize="@dimen/control_TextSmall" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtOrderTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center"
                android:maxLines="1"
                android:textColor="@color/waitingTitleIconColor"
                android:textSize="@dimen/control_TextSmall" />

        </LinearLayout>


        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderTimeDifference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center"
            android:maxLines="1"
            android:textColor="@color/waitingTitleIconColor"
            android:textSize="@dimen/control_TextSmall" />

        <!--<com.rey.material.widget.TextView-->
        <!--android:id="@+id/txtOrderTime"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="end"-->
        <!--android:maxLines="1"-->
        <!--android:textColor="@color/grey"-->
        <!--android:textSize="@dimen/control_TextSmall" />-->

        <LinearLayout
            android:id="@+id/itemLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@android:color/white"
            android:textSize="@dimen/control_TextMedium"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>

