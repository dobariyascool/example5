<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvOrder"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/control_SpecingTiny"
    android:layout_marginEnd="@dimen/control_SpecingTiny"
    android:layout_marginStart="@dimen/control_SpecingTiny"
    android:layout_marginTop="@dimen/control_SpecingTiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/control_SpecingTiny"
        android:paddingEnd="@dimen/control_SpecingSmall"
        android:paddingStart="@dimen/control_SpecingSmall"
        android:paddingTop="@dimen/control_SpecingTiny">

        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderTimeDifference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="#AFAFAF"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="#AFAFAF"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
                android:id="@+id/txtTableName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/control_TextMedium"
                android:textStyle="bold" />

        <com.rey.material.widget.TextView
                android:id="@+id/txtOrderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#AFAFAF"
                android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
                android:id="@+id/txtOrderType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#C0CA33"
                android:textSize="@dimen/control_TextSmall" />


        <com.rey.material.widget.TextView
                android:id="@+id/txtTotalItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#AFAFAF"
                android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@android:color/white"
            android:textSize="@dimen/control_TextMedium"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>

