<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvOrder"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/control_SpecingTiny"
    android:layout_marginEnd="@dimen/control_SpecingTiny"
    android:layout_marginStart="@dimen/control_SpecingTiny"
    android:layout_marginTop="@dimen/control_SpecingTiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/control_SpecingSmall">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <com.rey.material.widget.TextView
                android:id="@+id/txtTableName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingBottom="@dimen/control_SpecingTiny"
                android:textColor="@android:color/white"
                android:textSize="@dimen/control_TextMedium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivOrderType"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:scaleType="fitXY"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.rey.material.widget.TextView
                android:id="@+id/txtOrderNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="start"
                android:maxLines="1"
                android:paddingBottom="@dimen/control_SpecingTiny"
                android:textColor="@color/darkgoldenrod" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtOrderType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/control_SpecingTiny"
                android:textColor="#C0CA33" />

        </LinearLayout>

        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/control_SpecingTiny"
            android:text="@string/action_settings"
            android:textColor="#EFEBE9"
            android:textSize="@dimen/control_TextSmall"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/control_SpecingTiny"
                android:text="@string/roTotalItem"
                android:textColor="@color/darkgoldenrod" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtTotalItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/control_SpecingTiny"
                android:paddingEnd="@dimen/control_SpecingTiny"
                android:paddingStart="@dimen/control_SpecingSmall"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <com.rey.material.widget.TextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>

