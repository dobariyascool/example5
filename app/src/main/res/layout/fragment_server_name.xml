<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.arraybit.pos.ServerNameFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/offwhite"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.rey.material.widget.EditText
            android:id="@+id/etServerName"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sfName"
            android:padding="@dimen/control_SpecingSmall"/>

        <com.rey.material.widget.Button
            android:id="@+id/btnSave"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_SpecingSmall"
            android:text="@string/sfSubmit" />
    </LinearLayout>
</LinearLayout>
