<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arraybit.pos.ConfirmDialog">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.rey.material.widget.TextView
            android:id="@+id/txtHeader"
            style="@style/HeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/control_SpecingSmall"
            android:paddingEnd="@dimen/control_SpecingMedium"
            android:paddingStart="@dimen/control_SpecingMedium"
            android:paddingTop="@dimen/control_SpecingSmall"
            android:text="@string/cdfConfirmMsg" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/control_SpecingMedium"
            android:paddingStart="@dimen/control_SpecingMedium"
            android:textSize="@dimen/control_TextSmall"
            android:visibility="gone"/>

        <com.rey.material.widget.TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/control_SpecingMedium"
            android:textColor="@color/blue_grey"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <com.rey.material.widget.TextView
                android:id="@+id/txtCancel"
                style="@style/DialogTextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_button_height"
                android:text="@string/cdfCancel"/>

            <com.rey.material.widget.TextView
                android:id="@+id/txtConfirm"
                style="@style/DialogTextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_button_height"
                android:layout_marginEnd="@dimen/control_SpecingSmall"
                android:text="@string/cdfConfirm"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
