<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.arraybit.pos.GuestOrderActivity">

    <LinearLayout
        android:id="@+id/guestOrderMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/app_bar"
                layout="@layout/app_bar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    tools:ignore="HardcodedText">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.92"
                        android:gravity="top"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/primary"
                            android:gravity="center"
                            android:text="Summary"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Order No"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Total Item"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Item Point"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Discount"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_marginStart="@dimen/control_SpecingTiny"
                        android:layout_weight="0.08"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.rey.material.widget.Button
                            android:id="@+id/btnCancle"
                            style="@style/Button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_TouchableHeight"
                            android:layout_weight="1"
                            android:text="Cancle"
                            android:textSize="@dimen/control_TextSmall"/>

                        <com.rey.material.widget.Button
                            android:id="@+id/btnCheckOut"
                            style="@style/Button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_TouchableHeight"
                            android:layout_marginEnd="@dimen/control_SpecingTiny"
                            android:layout_marginStart="@dimen/control_SpecingTiny"
                            android:layout_weight="1"
                            android:text="Check Out"
                            android:textSize="@dimen/control_TextSmall"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UselessLeaf">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.92"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights,HardcodedText">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/primary"
                        android:gravity="center"
                        android:text="Your Order"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/control_SpecingSmall"
                        android:background="@color/transparent_orange"
                        android:gravity="center"
                        android:text="Item 1"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="@dimen/control_SpecingSmall"
                        android:layout_marginStart="@dimen/control_SpecingSmall"
                        android:background="@color/transparent_orange"
                        android:gravity="center"
                        android:text="Item 2"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/control_SpecingSmall"
                        android:background="@color/transparent_orange"
                        android:gravity="center"
                        android:text="Item 3"
                        android:textColor="@android:color/white"
                        />
                    </LinearLayout>
                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="0dp"-->
                        <!--android:orientation="horizontal"-->
                        <!--android:gravity="center"-->
                        <!--tools:ignore="HardcodedText"-->
                        <!--android:layout_weight="0.09"-->
                        <!--android:layout_margin="@dimen/control_SpecingTiny">-->

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="For More Benefit"-->
                            <!--android:paddingStart="@dimen/control_SpecingTiny"-->
                            <!--android:paddingEnd="@dimen/control_SpecingTiny"-->
                            <!--android:textColor="@android:color/white"/>-->

                        <!--<com.rey.material.widget.Button-->
                            <!--style="@style/Button"-->
                            <!--android:id="@+id/btnLogin"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="@dimen/button_TouchableHeight"-->
                            <!--android:layout_weight="1"-->
                            <!--android:gravity="center"-->
                            <!--android:textSize="@dimen/control_TextSmall"-->
                            <!--android:layout_marginEnd="@dimen/control_SpecingTiny"-->
                            <!--android:text="Login"/>-->

                        <!--<com.rey.material.widget.Button-->
                            <!--style="@style/Button"-->
                            <!--android:id="@+id/btnAddMore"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="@dimen/button_TouchableHeight"-->
                            <!--android:layout_weight="1"-->
                            <!--android:gravity="center"-->
                            <!--android:textSize="@dimen/control_TextSmall"-->
                            <!--android:text="Add More" />-->

                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/fabAddMore"
                            style="@style/FloatingButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom" />

                    <!--</LinearLayout>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- it is navigation drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="@dimen/navWidth"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:itemTextColor="@color/navigationdrawerText"
        app:menu="@menu/menu_navigation_drawer"/>
    <!-- end -->
</android.support.v4.widget.DrawerLayout>

