<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.arraybit.pos.SignInActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <com.rey.material.widget.EditText
            android:id="@+id/etName"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/siUserName"
            android:paddingTop="@dimen/control_SpecingSmall"
            android:paddingStart="@dimen/control_SpecingSmall"
            android:paddingEnd="@dimen/control_SpecingSmall"
            android:inputType="text" />

    <com.rey.material.widget.EditText
            android:id="@+id/etPassword"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/control_SpecingSmall"
            android:paddingEnd="@dimen/control_SpecingSmall"
            android:hint="@string/siPassword"
            android:inputType="textPassword" />

    <com.rey.material.widget.Button
        android:id="@+id/btnSignIn"
        style="@style/Button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/control_SpecingSmall"
        android:text="@string/siSignIn" />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="@style/SecondaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/siNewUser" />

        <com.rey.material.widget.CompoundButton
            android:id="@+id/cbSignUp"
            style="@style/CompoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/control_SpecingSmall"
            android:text="@string/siSignupHere" />

    </LinearLayout>

</LinearLayout>
