<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallWaiterDialog">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.rey.material.widget.TextView
            style="@style/HighLightedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_SpecingSmall"
            android:layout_marginEnd="@dimen/control_SpecingMedium"
            android:layout_marginStart="@dimen/control_SpecingMedium"
            android:layout_marginTop="@dimen/control_SpecingMedium"
            android:text="@string/callWaiter" />

        <com.rey.material.widget.EditText
            android:id="@+id/etMessage"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/control_SpecingMedium"
            android:layout_marginStart="@dimen/control_SpecingMedium"
            android:focusableInTouchMode="true"
            android:hint="@string/message"
            android:singleLine="true"
            tools:ignore="HardcodedText" />

        <com.rey.material.widget.Button
            android:id="@+id/btnCall"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:layout_gravity="end"
            android:text="@string/call"/>
    </LinearLayout>

</FrameLayout>
