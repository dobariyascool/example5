<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItem"
    style="@style/CardViewTransparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/control_SpecingTiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemGridImageHeight"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/control_SpecingSmall">

            <com.rey.material.widget.TextView
                android:id="@+id/txtItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/control_TextMedium" />


            <com.rey.material.widget.TextView
                android:id="@+id/txtItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Description"
                android:textColor="@color/darkgoldenrod"
                android:textSize="@dimen/control_TextSmall"
                tools:ignore="HardcodedText" />


            <com.rey.material.widget.TextView
                android:id="@+id/txtItemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Price"
                android:textColor="@android:color/white"
                android:textSize="@dimen/control_TextMedium"
                tools:ignore="HardcodedText" />

            <com.rey.material.widget.Button
                android:id="@+id/btnAdd"
                style="@style/AddButton"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:padding="@dimen/control_SpecingTiny"
                android:text="Add"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>