<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItem"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/control_SpecingTiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/control_SpecingSmall">

            <com.rey.material.widget.TextView
                android:id="@+id/txtItemName"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/control_TextMedium" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtItemDescription"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Description"
                android:textColor="@color/darkgoldenrod"
                tools:ignore="HardcodedText" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtItemPrice"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Price"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText" />
        <com.rey.material.widget.Button
            android:id="@+id/btnAdd"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/control_SpecingTiny"
            android:text="add"
            android:visibility="gone"/>
        </LinearLayout>
</android.support.v7.widget.CardView>