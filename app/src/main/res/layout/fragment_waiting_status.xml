<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.arraybit.pos.WaitingStatusFragment"
    tools:ignore="HardcodedText">

    <com.rey.material.widget.TextView
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/wsdTitle"
        android:textAllCaps="false"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/control_SpecingMedium"
        android:gravity="center"
        android:orientation="horizontal">

        <com.rey.material.widget.Button
            android:id="@+id/btnServe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableTop="@mipmap/serve"
            android:padding="@dimen/control_SpecingSmall"
            android:text="@string/wsdServe"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.Button
            android:id="@+id/btnNot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableTop="@mipmap/not_available"
            android:padding="@dimen/control_SpecingSmall"
            android:text="@string/wsdNot"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/control_TextSmall" />


        <com.rey.material.widget.Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableTop="@mipmap/close"
            android:padding="@dimen/control_SpecingSmall"
            android:text="@string/wsdCancel"
            android:textAlignment="viewEnd"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.Button
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableTop="@mipmap/call"
            android:padding="@dimen/control_SpecingSmall"
            android:text="@string/wsdCall"
            android:textAlignment="viewEnd"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/control_TextSmall" />

    </LinearLayout>
</LinearLayout>
