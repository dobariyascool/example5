<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    android:orientation="vertical"
    tools:context="com.arraybit.pos.FeedbackFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/control_SpecingMedium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rgMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbSuggestion"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/fbSuggestion" />

                <RadioButton
                    android:id="@+id/rbBug"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fbBug" />


                <RadioButton
                    android:id="@+id/rbOther"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fbOther" />
            </RadioGroup>

            <com.rey.material.widget.EditText
                android:id="@+id/etName"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fbName"
                android:inputType="textCapWords|textCapSentences"
                />

            <com.rey.material.widget.EditText
                android:id="@+id/etEmail"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fbEmail"
                android:inputType="textEmailAddress" />

            <com.rey.material.widget.EditText
                android:id="@+id/etMobileNo"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fbMobileNo"
                android:inputType="phone"
                android:maxLength="10" />

            <com.rey.material.widget.EditText
                android:id="@+id/etFeedback"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="@string/fbFeedback"
                android:inputType="textMultiLine" />

            <com.rey.material.widget.Button
                android:id="@+id/btnSubmit"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fbSubmit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
