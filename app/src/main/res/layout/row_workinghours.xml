<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#263238"
        android:gravity="center"
        android:visibility="visible">

        <com.rey.material.widget.TextView
            style="@style/PrimaryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start"
            android:padding="@dimen/control_SpecingTiny"
            android:text="@string/rDayOfWeek"
            android:textColor="@color/white_blur" />

        <com.rey.material.widget.TextView
            style="@style/PrimaryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:padding="@dimen/control_SpecingTiny"
            android:text="@string/rOpeningTime"
            android:textColor="@color/white_blur" />

        <com.rey.material.widget.TextView
            style="@style/PrimaryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:padding="@dimen/control_SpecingTiny"
            android:text="@string/rClosingTime"
            android:textColor="@color/white_blur" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#CFD8DC"
        android:gravity="center"
        android:padding="@dimen/control_SpecingTiny">

        <com.rey.material.widget.TextView
            android:id="@+id/txtDayOfWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtOpeningTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtClosingTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end" />

    </LinearLayout>

</LinearLayout>