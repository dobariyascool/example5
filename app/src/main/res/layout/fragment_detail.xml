<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    android:orientation="vertical"
    tools:context="com.arraybit.pos.DetailFragment"
    tools:ignore="HardcodedText">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/detailMainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/control_SpecingSmall">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/control_SpecingSmall"
                    android:paddingStart="@dimen/control_SpecingSmall">

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtItemName"
                        style="@style/SecondaryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/control_SpecingTiny"
                        android:paddingStart="@dimen/control_SpecingTiny"
                        android:textColor="#4E342E"
                        android:textSize="@dimen/control_TextLarge"
                        android:visibility="gone" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtItemPrice"
                        style="@style/SecondaryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/control_SpecingTiny"
                        android:paddingStart="@dimen/control_SpecingTiny"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/control_TextLarge" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtDescription"
                        style="@style/SecondaryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:padding="@dimen/control_SpecingTiny"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/control_TextSmall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/modifierLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/control_SpecingSmall"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/control_SpecingSmall"
                    android:paddingStart="@dimen/control_SpecingSmall">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.rey.material.widget.TextView
                            android:id="@+id/txtHeaderModifier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/control_SpecingTiny"
                            android:paddingStart="@dimen/control_SpecingTiny"
                            android:text="Modifier"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/control_TextMedium" />

                        <ImageView
                            android:id="@+id/ivModifier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/control_SpecingSmall"
                            android:src="@drawable/edit_accent_vector_drawable"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginTop="@dimen/control_SpecingSmall"
                        android:paddingEnd="@dimen/control_SpecingTiny"
                        android:paddingStart="@dimen/control_SpecingTiny"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/control_TextMedium"
                        android:visibility="gone" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/aiqfRemark"
                    android:paddingBottom="0dp"
                    android:paddingEnd="@dimen/control_SpecingSmall"
                    android:paddingStart="@dimen/control_SpecingSmall"
                    android:paddingTop="0dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/primary_dark"
                    app:et_labelTextColor="@android:color/black">

                    <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
                        android:id="@+id/actRemark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableEnd="@drawable/arrow_drop_down_vector_drawable"
                        android:dropDownHeight="190dp"
                        android:gravity="top"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textSize="14sp" />
                    <!--android:lineSpacingMultiplier="1" android:imeOptions="actionDone"-->
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="@dimen/control_SpecingTiny"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingTiny"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/control_SpecingSmall"
                    android:paddingStart="@dimen/control_SpecingSmall">

                    <com.rey.material.widget.ImageButton
                        android:id="@+id/ibMinus"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_selector"
                        android:src="@mipmap/minus" />

                    <com.rey.material.widget.EditText
                        android:id="@+id/etQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="1"
                        app:et_inputId="@+id/Quantity_input"
                        tools:ignore="HardcodedText" />

                    <com.rey.material.widget.ImageButton
                        android:id="@+id/ibPlus"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_selector"
                        android:src="@mipmap/plus_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingTiny"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:paddingEnd="@dimen/control_SpecingSmall"
                    android:paddingStart="@dimen/control_SpecingSmall">

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum1"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="1" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum2"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="2" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum3"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/control_SpecingSmall"
                    android:paddingStart="@dimen/control_SpecingSmall">

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum4"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="4" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum5"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="5" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum6"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/control_SpecingSmall"
                    android:paddingStart="@dimen/control_SpecingSmall">

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum7"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="7" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum8"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="8" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btnNum9"
                        style="@style/NumberButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/control_SpecingTiny"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_weight="1"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/control_SpecingSmall"
                    android:layout_marginStart="@dimen/control_SpecingSmall"
                    android:orientation="horizontal">

                    <com.rey.material.widget.Button
                        android:id="@+id/btnCancel"
                        style="@style/Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/control_SpecingSmall"
                        android:layout_weight="1"
                        android:text="@string/dfCancel" />

                    <com.rey.material.widget.Button
                        android:id="@+id/btnOrder"
                        style="@style/Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dfAdd" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>