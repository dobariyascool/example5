<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.arraybit.pos.ThankYouFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/action_settings"
        android:scaleType="fitXY"
        android:src="@drawable/my_account" />

    <com.rey.material.widget.TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/control_SpecingTiny"
        android:text="Thank you for ..................................."
        android:textSize="@dimen/control_TextMedium"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="HardcodedText">

        <com.rey.material.widget.Button
            android:id="@+id/btnFeedback"
            style="@style/BorderButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_Height"
            android:gravity="center"
            android:text="Feedback" />

        <com.rey.material.widget.Button
            android:id="@+id/btnSkip"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_Height"
            android:layout_marginStart="@dimen/control_SpecingTiny"
            android:gravity="center"
            android:text="Skip" />

    </LinearLayout>
</LinearLayout>
