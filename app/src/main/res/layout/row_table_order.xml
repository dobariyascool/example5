<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvOrder"
    style="@style/CardViewTransparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/control_SpecingTiny"
        android:paddingEnd="@dimen/control_SpecingSmall"
        android:paddingStart="@dimen/control_SpecingSmall"
        android:paddingTop="@dimen/control_SpecingTiny">

        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderTimeDifference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/waitingTitleIconColor"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/waitingTitleIconColor"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtTableName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/control_TextMedium"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtTotalOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/waitingTitleIconColor"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtOrderType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/accent_red"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtTotalItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/waitingTitleIconColor"
            android:textSize="@dimen/control_TextSmall" />

        <com.rey.material.widget.TextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/control_TextMedium"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>

