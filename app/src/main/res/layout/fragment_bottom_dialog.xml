<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arraybit.pos.BottomDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offwhite"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/control_SpecingSmall"
        android:paddingEnd="@dimen/control_SpecingSmall"
        android:paddingStart="@dimen/control_SpecingSmall"
        android:paddingTop="@dimen/control_SpecingSmall">

        <com.rey.material.widget.Button
            android:id="@+id/btnDineIn"
            style="@style/StatusButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/control_SpecingSmall"
            android:layout_weight="1"
            android:drawableTop="@mipmap/dine_in"
            android:text="@string/wolfTable"
            android:textColor="@color/secondary_text"
            android:visibility="visible"/>

        <com.rey.material.widget.Button
            android:id="@+id/btnTakeAway"
            style="@style/StatusButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/take_away"
            android:text="@string/wolfMenu"
            android:textColor="@color/secondary_text"
            android:visibility="visible"/>

    </LinearLayout>

</FrameLayout>
