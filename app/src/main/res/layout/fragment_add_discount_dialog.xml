<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arraybit.pos.AddDiscountDialogFragment"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/actDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_SpecingSmall"
            android:drawableEnd="@drawable/arrow_drop_down_vector_drawable"
            android:dropDownHeight="190dp"
            android:dropDownListViewStyle="@style/DropDownListViewStyle"
            android:editable="false"
            android:hint="@string/ddfDiscount"
            android:imeOptions="actionDone"
            android:inputType="none"
            android:padding="@dimen/control_SpecingSmall"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/primary_dark"
            android:textSize="14sp"
            tools:ignore="Deprecated" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/control_SpecingTiny"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/control_SpecingSmall"
            android:paddingStart="@dimen/control_SpecingSmall">

            <com.rey.material.widget.EditText
                android:id="@+id/etDiscount"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="start"
                android:inputType="number"
                android:paddingEnd="@dimen/control_SpecingTiny"
                android:paddingStart="@dimen/control_SpecingTiny"
                tools:ignore="HardcodedText" />

            <ToggleButton
                android:id="@+id/tbPercentage"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="0.3"
                android:textOff="@string/ddfPercentage"
                android:textOn="@string/ddfPercentage" />

            <ToggleButton
                android:id="@+id/tbRupee"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:src="@mipmap/plus_small"
                android:textAllCaps="false"
                android:textOff="@string/ddfRupee"
                android:textOn="@string/ddfRupee" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/control_SpecingTiny"
            android:layout_marginTop="@dimen/control_SpecingTiny"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingEnd="@dimen/control_SpecingTiny"
            android:paddingStart="@dimen/control_SpecingTiny">

            <com.rey.material.widget.Button
                android:id="@+id/btnNum1"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="1" />

            <com.rey.material.widget.Button
                android:id="@+id/btnNum2"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="2" />

            <com.rey.material.widget.Button
                android:id="@+id/btnNum3"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/control_SpecingTiny"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/control_SpecingTiny"
            android:paddingStart="@dimen/control_SpecingTiny">

            <com.rey.material.widget.Button
                android:id="@+id/btnNum4"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="4" />

            <com.rey.material.widget.Button
                android:id="@+id/btnNum5"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="5" />

            <com.rey.material.widget.Button
                android:id="@+id/btnNum6"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/control_SpecingTiny"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/control_SpecingTiny"
            android:paddingStart="@dimen/control_SpecingTiny">

            <com.rey.material.widget.Button
                android:id="@+id/btnNum7"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="7" />

            <com.rey.material.widget.Button
                android:id="@+id/btnNum8"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="8" />

            <com.rey.material.widget.Button
                android:id="@+id/btnNum9"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/control_SpecingTiny"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/control_SpecingTiny"
            android:paddingStart="@dimen/control_SpecingTiny">

            <com.rey.material.widget.Button
                android:id="@+id/btnNum0"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="0" />

            <com.rey.material.widget.Button
                android:id="@+id/btnDot"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:text="."
                android:textSize="@dimen/control_TextLarge" />

            <com.rey.material.widget.ImageButton
                android:id="@+id/btnClear"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/control_SpecingTiny"
                android:layout_marginEnd="@dimen/control_SpecingTiny"
                android:layout_weight="1"
                android:src="@drawable/keyboard_clear_vector_drawable" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:layout_marginEnd="@dimen/control_SpecingTiny"
            android:layout_marginStart="@dimen/control_SpecingTiny"
            android:gravity="center"
            android:orientation="horizontal">

            <com.rey.material.widget.Button
                android:id="@+id/btnCancel"
                style="@style/DialogButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/aiqfCancel"
                tools:ignore="HardcodedText" />

            <com.rey.material.widget.Button
                android:id="@+id/btnOk"
                style="@style/DialogButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/aiqfOk"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
