<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCompactCardView">android.support.v7.CardView</style>
    <style name="CardViewTransparent" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardBackgroundColor">@color/transparent_orange</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:foreground">@drawable/offer_ripple_effect</item>
    </style>

    <!--<style name="NavigationViewStyle">-->
        <!--<item name="android:fontFamily">Roboto-Regular</item>-->
        <!--<item name="android:textStyle">normal</item>-->
    <!--</style>-->

    <style name="DefaultCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CardViewOption" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardBackgroundColor">#65000000</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:foreground">@drawable/cardview_ripple_effect</item>
    </style>

    <style name="FloatingMiniButton" parent="FloatingActionButton">
        <item name="fab_colorNormal">@color/orange</item>
        <item name="rd_rippleColor">@color/orange_light</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorPressed">@color/orange</item>
        <item name="android:src">@drawable/edit</item>
        <item name="android:layout_marginTop">162dp</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingSmall</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

</resources>