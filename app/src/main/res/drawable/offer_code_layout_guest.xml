<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/offerlayout1">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_dark" />
        </shape>
    </item>

    <item android:id="@+id/offerlayout2">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/control_SpecingTiny" android:left="@dimen/control_SpecingTiny"
                android:right="@dimen/control_SpecingTiny" android:top="@dimen/control_SpecingTiny"/>
            <solid android:color="@color/accent_dark" />
        </shape>
    </item>

    <item android:id="@+id/offerlayout3"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/orange" />
            <size
                android:width="100dp"
                android:height="20dp" />
            <solid android:color="@color/orange" />
        </shape>
    </item>
</layer-list>