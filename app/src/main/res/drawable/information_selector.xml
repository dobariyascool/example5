<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape  android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="@color/blue_grey_500" />

            <solid android:color="@color/blue_100"/>

            <padding android:left="3dp" android:right="3dp" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape  android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <solid android:color="@color/blue_100"/>

            <padding android:left="3dp" android:right="3dp" />

            <corners android:radius="1dp" />
        </shape>
    </item>
</selector>